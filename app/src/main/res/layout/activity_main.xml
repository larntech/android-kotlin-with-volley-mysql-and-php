<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.larntech.kotlinmysql.MainActivity">

    <TextView
        android:id="@+id/weeklyactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Weekly Activities" />
    <EditText
        android:id="@+id/activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Activity"
        android:layout_margin="10dp"
        android:layout_below="@+id/weeklyactivity"
        />
    <Spinner
    android:id="@+id/day"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_below="@+id/activity"
    android:entries="@array/days"
    android:layout_height="wrap_content"></Spinner>

    <Button
        android:id="@+id/addactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/day"
        android:layout_below="@+id/day"
        android:background="@color/colorAccent"
        android:padding="15dp"
        android:layout_marginTop="29dp"
        android:text="Add Activity"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp" />
</RelativeLayout>
